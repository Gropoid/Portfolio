<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/MainPageTitleText"
        android:id="@+id/tvMainPageTitle"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="@string/MainPageButtonOneText"
        android:id="@+id/button"
        style="@style/MainPageButtonStyle" />

    <Button
        android:text="@string/MainPageButtonTwoText"
        android:id="@+id/button2"
        android:layout_below="@+id/button"
        style="@style/MainPageSecondaryButtonStyle" />

    <Button
        android:text="@string/MainPageButtonThreeText"
        android:id="@+id/button3"
        android:layout_below="@+id/button2"
        style="@style/MainPageSecondaryButtonStyle" />

    <Button
        android:text="@string/MainPageButtonFourText"
        android:id="@+id/button4"
        android:layout_below="@+id/button3"
        style="@style/MainPageSecondaryButtonStyle" />

    <Button
        android:text="@string/MainPageButtonFiveText"
        android:id="@+id/button5"
        android:layout_below="@+id/button4"
        style="@style/MainPageSecondaryButtonStyle" />

    <Button
        android:text="@string/MainPageButtonSixText"
        android:id="@+id/button6"
        android:layout_below="@+id/button5"
        style="@style/MainPageSecondaryButtonStyle" />
</RelativeLayout>
